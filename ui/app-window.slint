import { Button,VerticalBox, HorizontalBox, LineEdit } from "std-widgets.slint";

export component AppWindow inherits Window {
    title: "Temperature Converter";
    preferred-width: 640px;
    preferred-height: 64px;
    min-width: 450px;
    min-height: 48px;

    HorizontalBox {
        celsius_edit := LineEdit {
            text: "0";
            horizontal-alignment: center;
            edited(text) => {
                fahrenheit_edit.text = Math.round(text.to-float() * 9.0 / 5.0 + 32);
            }
        }

        Text {
            text: "Celsius =";
            horizontal-alignment: center;
            vertical-alignment: center;
        }

        fahrenheit_edit := LineEdit {
            text: "32";
            horizontal-alignment: center;
            edited(text) => {
                celsius_edit.text = Math.round((text.to-float() - 32) * 5.0 / 9.0);
            }
        }

        Text {
            text: "Fahrenheit";
            horizontal-alignment: center;
            vertical-alignment: center;
        }
    }
}
