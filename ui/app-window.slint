import { Button, HorizontalBox, LineEdit } from "std-widgets.slint";

export component AppWindow inherits Window {
    title: "Counter";
    preferred-width: 320px;
    preferred-height: 72px;
    min-width: 270px;
    min-height: 48px;

    //Properties
    in-out property <int> counter: 0;

    //Callbacks
    callback request-increase-value();

    HorizontalBox {
        LineEdit {
            horizontal-stretch: 1;
            text: "\{root.counter}";
            horizontal-alignment: center;
            read-only: true;
        }

        Button {
            horizontal-stretch: 1;
            text: "Count";
            clicked => {
                root.request-increase-value();
            }
        }
    }
}
