import { Button,VerticalBox, HorizontalBox, LineEdit } from "std-widgets.slint";

export component AppWindow inherits Window {
    title: "Temperature Converter";
    preferred-width: 640px;
    preferred-height: 64px;
    min-width: 450px;
    min-height: 48px;

    //Properties
    in-out property <int> celsius:0;
    in-out property <int> fahrenheit:32;

    //Callbacks
    callback celsius_changed(string);
    callback fahrenheit_changed(string);

    HorizontalBox {
        celsius_edit := LineEdit {
            text: "\{celsius}";
            horizontal-alignment: center;
            edited(text) => {
                celsius_changed(text);
                fahrenheit_edit.text = fahrenheit;
            }
        }

        Text {
            text: "Celsius =";
            horizontal-alignment: center;
            vertical-alignment: center;
        }

        fahrenheit_edit := LineEdit {
            text: "\{fahrenheit}";
            horizontal-alignment: center;
            edited(text) => {
                fahrenheit_changed(text);
                celsius_edit.text = celsius;
            }
        }

        Text {
            text: "Fahrenheit";
            horizontal-alignment: center;
            vertical-alignment: center;
        }
    }
}
